modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Unified Web App"

[[workflows.workflow]]
name = "Unified Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 32829
externalPort = 3002

[[ports]]
localPort = 33765
externalPort = 3003

[[ports]]
localPort = 39619
externalPort = 3001

[[ports]]
localPort = 41289
externalPort = 3000

[[ports]]
localPort = 43293
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
build = ["npm", "run", "build"]
