modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Web App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Backend"

[[workflows.workflow]]
name = "React Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "BROWSER=none PORT=5000 npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "FastAPI Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 32829
externalPort = 3002

[[ports]]
localPort = 33765
externalPort = 3003

[[ports]]
localPort = 39619
externalPort = 3001

[[ports]]
localPort = 43195
externalPort = 4200

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "dist", "-s", "-p", "5000"]
build = ["npx", "expo", "export", "--platform", "web"]
